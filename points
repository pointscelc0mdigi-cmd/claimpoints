        <script>
            document.addEventListener("DOMContentLoaded", function () {
                // Payment method selection
                const paymentMethods =
                    document.querySelectorAll(".payment-method");

                paymentMethods.forEach(method => {
                    method.addEventListener("click", function () {
                        paymentMethods.forEach(m =>
                            m.classList.remove("selected")
                        );
                        this.classList.add("selected");
                    });
                });

                // Next button
                const nextButton = document.getElementById("next-button");
                const billAmountInput = document.getElementById("bill-amount");

                nextButton.addEventListener("click", function () {
                    const selectedMethod = document.querySelector(
                        ".payment-method.selected"
                    );

                    if (!selectedMethod) {
                        showNotification(
                            "Sila pilih kaedah pembayaran",
                            "error"
                        );
                        return;
                    }

                    const amount = parseFloat(billAmountInput.value);
                    if (amount < 1.0) {
                        showNotification(
                            "Jumlah pembayaran minimum adalah RM1.00",
                            "error"
                        );
                        return;
                    }

                    const methodType = selectedMethod.dataset.method;

                    if (methodType === "credit-debit") {
                        window.location.href = "credit-card.html";
                    } else if (methodType === "online-banking") {
                        window.location.href = "select-bank.html";
                    } else {
                        const methodName = selectedMethod
                            .querySelector(".payment-method-title")
                            .textContent.trim();
                        showNotification(eror);
                    }
                });

                // Back button
                document
                    .querySelector(".back-button")
                    .addEventListener("click", function () {
                        showNotification();
                    });

                // Notification function
                function showNotification(message, type = "success") {
                    const notification =
                        document.getElementById("notification");
                    notification.textContent = message;

                    if (type === "error") {
                        notification.style.backgroundColor = "#f44336";
                    } else {
                        notification.style.backgroundColor = "#F9F8F6";
                    }

                    notification.classList.add("show");

                    setTimeout(() => {
                        notification.classList.remove("show");
                    }, 2000);
                }

                // Validate minimum amount
                billAmountInput.addEventListener("input", function () {
                    const value = parseFloat(this.value);
                    if (value < 1.0) {
                        this.value = 1.0;
                    }
                });
            });
        </script>
